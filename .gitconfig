[user]
  name = Bruno Cecatto
  email = bruno-ceccatto@hotmail.com

[core]
  editor = vim

[alias]
  s = status
  c = commit
  d = diff
  ch = checkout
  br = branch
  pl = pull
  ps = push
  fe = fetch
  can = commit --amend --no-edit
  rima = rebase -i origin/master
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[merge]
  tool = meld

[mergetool]
  prompt = false

[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"

[color]
  ui = auto
